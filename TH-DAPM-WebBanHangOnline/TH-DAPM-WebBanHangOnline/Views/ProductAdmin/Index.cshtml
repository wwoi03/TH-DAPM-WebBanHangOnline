@using TH_DAPM_WebBanHangOnline.Models.ViewModel
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	var listService = ViewBag.listService;
}
@model ProductsViewModel

<div>
	<!-- Start: BreadCrumbsPartial -->
	@Html.Partial("_BreadCrumbsPartial")
	<!-- End: BreadCrumbsPartial -->

	<div class="animated fadeIn">
		<div class="row">
			<!-- Danh sách -->
			<div class="col-lg-8">
				<div class="card">
					<div class="card-header" style="display: flex; align-items: center; justify-content: space-between">
						<b>Danh sách dịch vụ</b>

						<!-- Tìm kiếm -->
						<form class="search-form">
							<input class="search-input" placeholder="Nhập tên dịch vụ">

							<a class="search-btn">
								<i class="fa fa-search"></i>
							</a>
						</form>

						<!-- Thêm -->
						<a asp-controller="Service" asp-action="Index" class="btn btn-sm color-white btn-size" style="background: #007BFF !important">
							<i class="fa fa-info-circle"></i>
							&nbsp;Thêm
						</a>
					</div>

					<div class="table-stats order-table ov-h" style="width: 100%; overflow-x: scroll">
						<!-- Hiển thị danh sách -->
						<table class="table" style="overflow-x: scroll">

							<!-- Tiêu đề -->
							<thead>
								<tr>
									<th>STT</th>
									<th>Icon</th>
									<th>Tên</th>
									<th>Chức năng</th>
								</tr>
							</thead>

							<!-- Render -->
							<tbody>
								<tr>
									<td></td>

									<td>
										<div class="round-img">
											<a href="#"><img class="rounded-circle" src="images/avatar/1.jpg" style="margin: 0px;" alt=""></a>
										</div>
									</td>

									<td style="white-space: nowrap">
										<span></span>
									</td>

									<td style="color: #fff !important; white-space: nowrap">
										<a asp-controller="Service" asp-action="Details" asp-route-key="" class="btn btn-sm color-white btn-size" style="background: #17A2B8 !important">
											<i class="fa fa-info-circle"></i>
											&nbsp;Xem
										</a>
										<a asp-controller="Service" asp-action="Edit" asp-route-key="" class="btn btn-sm color-white btn-size" style="background: #00C292 !important">
											<i class="fa fa-edit"></i>
											&nbsp;Sửa
										</a>
										<a asp-controller="Service" asp-action="Delete" asp-route-key="" class="btn btn-sm color-white btn-size" style="background: #FB9678 !important">
											<i class="fa fa-trash-o"></i>
											&nbsp;Xóa
										</a>
									</td>
								</tr>
							</tbody>
						</table>
					</div> <!-- /.table-stats -->
				</div>
			</div>

			<!-- Form -->
			<div class="col-lg-4">
				@*<!-- Thêm -->
					@if (Model.Key == null)
					{
					<div class="form-add-container">
					<div class="card">
					<form id="form-add" asp-controller="Service" asp-action="Create" method="post" enctype="multipart/form-data">
					<div class="card-header" style="display: flex; align-items: center; justify-content: space-between">
					<b>Thêm dịch vụ</b>

					<!-- Lưu -->
					<a id="form-add-btn" class="btn btn-sm color-white btn-size" style="background: #007BFF !important">
					<i class="fa fa-save"></i>
					&nbsp;Lưu
					</a>
					</div>

					<!-- Form nhập -->
					<div class="card-body">
					<div class="form-group">
					<label for="cc-payment" class="control-label mb-1">Tên chức năng</label>
					<input asp-for="" id="cc-payment" type="text" class="form-control" placeholder="Nhập tên chức năng">
					<span class="text-danger" asp-validation-for=""></span>
					</div>

					<div class="form-group has-success">
					<label for="cc-name" class="control-label mb-1">Mã chức năng</label>
					<input asp-for="" id="cc-name" type="text" class="form-control cc-name valid" placeholder="Nhập mã chức năng">
					<span class="text-danger" asp-validation-for=""></span>
					</div>

					<div class="form-group">
					<label for="cc-number" class="control-label mb-1">Icon</label>
					<br />
					<input id="imageFile" type="file" accept="image/*" asp-for="">
					<br />
					<span class="text-danger" asp-validation-for=""></span>
					</div>
					</div>
					</form>
					</div>
					</div>
					}

					<!-- Sửa - Chi tiết -->
					@if (Model.Key != null)
					{
					<div class="form-edit-container">
					<div class="card">
					<form id="form-edit" asp-controller="Service" asp-action="Edit" method="post">
					<div class="card-header" style="display: flex; align-items: center; justify-content: space-between">
					<b>@ViewBag.titleAction</b>

					<!-- Lưu -->
					<a id="form-edit-btn" class="btn btn-sm color-white btn-size" style="background: #007BFF !important">
					<i class="fa fa-save"></i>
					&nbsp;Lưu
					</a>
					</div>

					<!-- Form nhập -->
					<div class="card-body">
					<div class="form-group">
					<label for="cc-payment" class="control-label mb-1">Key</label>
					<input type="text" class="form-control" readonly value="" asp-for="">
					</div>

					<div class="form-group">
					<label for="cc-payment" class="control-label mb-1">Tên chức năng</label>
					<input asp-for="" value="" type="text" class="form-control" placeholder="Nhập tên chức năng">
					<span class="text-danger" asp-validation-for=""></span>
					</div>

					<div class="form-group has-success">
					<label for="cc-name" class="control-label mb-1">Mã chức năng</label>
					<input asp-for="" value="" id="cc-name" type="text" class="form-control cc-name valid" placeholder="Nhập mã chức năng">
					<span class="text-danger" asp-validation-for=""></span>
					</div>

					<div class="form-group">
					<label for="cc-number" class="control-label mb-1">Icon</label>
					<br />
					<input id="imageFile" type="file" accept="image/*" asp-for="">
					<input id="imageFile" hidden asp-for="" value="">
					<br />
					<span class="text-danger" asp-validation-for=""></span>
					</div>
					</div>
					</form>
					</div>
					</div>
					}*@
			</div>
		</div>
	</div>
</div>

