@using Newtonsoft.Json
@using TH_DAPM_WebBanHangOnline.Models.ViewModel
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	var listCategory = ViewBag.listCategory;
}
@model CategoryViewModel

<div>
	<!-- Start: BreadCrumbsPartial -->
	@Html.Partial("_BreadCrumbsPartial")
	<!-- End: BreadCrumbsPartial -->
	<!-- Render -->
	<div class="animated fadeIn">
		<div class="row">
			<!-- Danh sách -->
			<div class="col-lg-8">
				<div class="card">
					<div class="card-header" style="display: flex; align-items: center; justify-content: space-between">
						<b>Danh loại sản phẩm</b>

						<!-- Tìm kiếm -->
						<form class="search-form">
							<input class="search-input" placeholder="Nhập tên loại sản phẩm">

							<a class="search-btn">
								<i class="fa fa-search"></i>
							</a>
						</form>

						<!-- Thêm -->
						<a id="open-form-create" class="btn btn-sm color-white btn-size" style="background: #007BFF !important">
							<i class="fa fa-info-circle"></i>
							&nbsp;Thêm
						</a>
					</div>

					<div class="table-stats order-table ov-h" style="width: 100%; overflow-x: scroll">
						<!-- Hiển thị danh sách -->
						<table class="table" style="overflow-x: scroll">

							<!-- Tiêu đề -->
							<thead>
								<tr>
									<th>ID</th>
									<th>Tên loại sản phẩm</th>
									<th>Chức năng</th>
								</tr>
							</thead>

							<!-- Render -->
							<tbody>
								@foreach (var item in listCategory)
								{
									<tr>
										<td>@item.CategoryId</td>

										@*<td>
											<div class="round-img">
											<a href="#"><img class="rounded-circle" src="images/avatar/1.jpg" style="margin: 0px;" alt=""></a>
											</div>
											</td>*@

										<td style="white-space: nowrap">
											<span>@item.Name</span>
										</td>

										<td style="color: #fff !important; white-space: nowrap">
											<a asp-controller="CategoriesAdmin" asp-action="Details" asp-route-id="" class="btn btn-sm color-white btn-size" style="background: #17A2B8 !important">
												<i class="fa fa-info-circle"></i>
												&nbsp;Xem
											</a>
											<a asp-controller="CategoriesAdmin" asp-action="Edit" asp-route-id="" class="btn btn-sm color-white btn-size" style="background: #00C292 !important">
												<i class="fa fa-edit"></i>
												&nbsp;Sửa
											</a>
											<a asp-controller="CategoriesAdmin" asp-action="Delete" asp-route-id="" class="btn btn-sm color-white btn-size" style="background: #FB9678 !important">
												<i class="fa fa-trash-o"></i>
												&nbsp;Xóa
											</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div> <!-- /.table-stats -->
				</div>
			</div>

			<!-- Form -->
			<div class="col-lg-4">
				<!-- Thêm -->
				<div id="form-container">
				</div>

				@*<!-- Sửa - Chi tiết -->
					@if (Model != null)
					{
					<div class="form-edit-container">
					<div class="card">
					<form id="form-edit" asp-controller="CategoriesAdmin" asp-action="Edit" method="post">
					<div class="card-header" style="display: flex; align-items: center; justify-content: space-between">
					<b>@ViewBag.titleAction</b>

					<!-- Lưu -->
					<a id="form-edit-btn" class="btn btn-sm color-white btn-size" style="background: #007BFF !important">
					<i class="fa fa-save"></i>
					&nbsp;Lưu
					</a>
					</div>

					<!-- Form nhập -->
					<div class="card-body">
					<div class="form-group">
					<label for="cc-payment" class="control-label mb-1">ID</label>
					<input type="text" class="form-control" readonly value="" asp-for="CategoryId" value="@Model.CategoryId">
					</div>

					<div class="form-group">
					<label for="cc-payment" class="control-label mb-1">Tên loại sản phẩm</label>
					<input asp-for="Name" value="@Model.Name" id="cc-payment" type="text" class="form-control" placeholder="Nhập tên loại sản phẩm">
					<span class="text-danger" asp-validation-for="Name"></span>
					</div>
					</div>
					</form>
					</div>
					</div>
					}*@
			</div>
		</div>
	</div>
</div>

<script src="~/admin/assets/js/category.js"></script>