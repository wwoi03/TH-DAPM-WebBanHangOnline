@using TH_DAPM_WebBanHangOnline.Models.ViewModel
@model ProducerViewModel


<div class="form-edit-container">
	<div class="card">
		<form id="form-edit" asp-controller="ProducerAdmin" asp-action="EditProducer" method="post">
			<div class="card-header" style="display: flex; align-items: center; justify-content: space-between">
				<b>@ViewBag.titleAction</b>

				<!-- Lưu -->
				<input id="form-edit-btn" type="submit"  class="btn btn-sm color-white btn-size" style="background: #007BFF !important">
					
					
			
			</div>

			<!-- Form nhập -->
			<div class="card-body">
				<div class="form-group">
					<label for="cc-payment" class="control-label mb-1">ID</label>
					<input type="text" class="form-control" readonly value="@Model.ProducerId" asp-for="ProducerId">
				</div>

				<div class="form-group">
					<label for="cc-payment" class="control-label mb-1">Tên loại sản phẩm</label>
					<input asp-for="Name" value="@Model.Name" id="cc-payment" type="text" class="form-control" placeholder="Nhập tên loại sản phẩm">
					<span class="text-danger" asp-validation-for="Name"></span>

					<label for="cc-payment" class="control-label mb-1">Số Điện Thoại</label>
					<input asp-for="Phone" value="@Model.Phone" id="cc-payment" type="text" class="form-control" placeholder="">
					<span class="text-danger" asp-validation-for="Phone"></span>

					<label for="cc-payment" class="control-label mb-1">Địa Chỉ</label>
					<input asp-for="Address" value="@Model.Address" id="cc-payment" type="text" class="form-control" placeholder="">
					<span class="text-danger" asp-validation-for="Address"></span>
				</div>

			</div>
		</form>
	</div> 
</div>